{
  "name": "foundry-local-chat",
  "version": "1.0.2",
  "description": "Foundry Local Chat - A powerful Electron Chat application for both cloud and local models across Windows and macOS",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:mac:arm64": "electron-builder --mac --arm64",
    "build:mac:universal": "electron-builder --mac --universal",
    "build:win": "electron-builder --win",
    "build:x64": "electron-builder --win --x64",
    "build:arm64": "electron-builder --win --arm64",
    "build:all": "electron-builder -mw",
    "dist": "electron-builder"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^39.2.4",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "foundry-local-sdk": "^0.3.0",
    "openai": "^4.98.0"
  },
  "build": {
    "appId": "com.foundry.localchat",
    "productName": "Foundry Local Chat",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.cjs",
      "chat.html",
      "foundry-service.js",
      "package.json",
      "icon.png"
    ],
    "win": {
      "icon": "build/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        "portable"
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": [
        "sha256"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Foundry Local Chat"
    },
    "mac": {
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "sign": false
    }
  }
}
